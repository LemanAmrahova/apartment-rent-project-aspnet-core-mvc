@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ApartmentSaleProject.Models.Block
@{
    ViewData["Title"] = "EditBlock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Block</h1>
<div class="container mt-5">
    <form asp-controller="Apartment" asp-action="EditBlock" method="post">
        <div class="mb-3">
            <label for="blockName" class="form-label">Block Name:</label>
            <input type="text" class="form-control" id="blockName" asp-for="Name">
        </div>
        <div class="mb-3" style="display:none">
            <label for="id" class="form-label">Block Name:</label>
            <input type="text" class="form-control" id="id" asp-for="Id">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
